<%- include ("../partials/header") %>
<link rel="stylesheet" href="/campground.css">
<div class="container">
<div class="jumbotron ">
    <h1>Edit <%= UpdateCamp.name %></h1>
    
</div>
</div>

<div  id="don" >
 <form action="/campgrounds/<%= UpdateCamp._id %>/update?_method=PUT" method="POST"  >
    <div class="form-group">
        <input class="form-control" type="text " name="yelp[name]"  value="<%= UpdateCamp.name %>">
     </div>
    <div class="form-group">
         <input class="form-control" type="text" name="yelp[campUrl]"  value="<%= UpdateCamp.image %>">
    </div>
    <div class="form-group">
     <input class="form-control" type="text" name="yelp[location]"  value="<%= UpdateCamp.location %>">
   </div>
    <div class="form-group">
         <textarea type="text" style="height: 50px; width: 30%;"  name="yelp[description]"><%= UpdateCamp.description %></textarea>
    </div>
    <div class="form-group">
     <input class="form-control" type="number" step="0.1" name="yelp[price]"  value="<%= UpdateCamp.price %>">
</div>
    <div class="form-group">
         <button class="btn btn-primary btn-block" style="width:30%;">Update</button>
    </div>
 </form>
<a class="btn btn-secondary mt-3"  href="/campgrounds">go back</a>

</div>
<%- include ("../partials/footer") %>


