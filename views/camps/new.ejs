<%- include ("../partials/header") %>
<link rel="stylesheet" href="/campground.css">
<div class="container">
<div class="jumbotron ">
    <h1>Add a new campground</h1>
    <p>Fill this form to add the campground.Let's share with everyone.</p>
</div>
</div>

<div  id="don" >
 <form action="/campgrounds" method="POST" >
    <div class="form-group">
        <input class="form-control" type="text " name="Name" placeholder="Name">
     </div>
    <div class="form-group">
         <input class="form-control" type="text" name="campUrl" placeholder="Image Url">
    </div>
    <div class="form-group">
     <input class="form-control" type="text" name="location" placeholder="location">
    </div>
    <div class="form-group">
         <textarea type="text" style="height: 50px; width: 30%;" placeholder="description" name="description"></textarea>
    </div>
    <div class="form-group">
         <input class="form-control" type="number" step="0.1"  placeholder="price" name="price">
    </div>
    <div class="form-group">
         <button class="btn btn-primary btn-block" style="width:30%;">Submit</button>
    </div>
 </form>
<a class="btn btn-secondary mt-3"  href="/campgrounds">go back</a>

</div>
<%- include ("../partials/footer") %>


