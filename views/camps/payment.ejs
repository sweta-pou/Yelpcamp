<%- include ("../partials/header") %> 

<div class="ui very padded text container segment">
    <div class="header">
   <h2>Onwer Info:</h2>
    </br>
    </div>
    <div class="content">
        <p>You can place the booking via email or phone.</p>
    <p>Name:<%= foundcamp.Owner_name %></p>
    <p>Email: <%= foundcamp.Owner_email %></p>
    <p>phone:<%= foundcamp.Owner_contact %></p>
    </div>
    <div class="ui horizontal divider">
        Or
      </div>
    <div class="content">
  <p>Book and pay</p>
<button  class=" ui basic red button" id="payment-button">Pay with Khalti</button>

    </div>
</div>


<script>
    
    var config = {
        // replace the publicKey with yours
        "publicKey": "<%=foundcamp.publicKey %>",
        "productIdentity": "1234567890",
        "productName": "Dragon",
        "productUrl": "http://gameofthrones.wikia.com/wiki/Dragons",
        "paymentPreference": [
            "MOBILE_BANKING",
            "KHALTI",
            "EBANKING",
            "CONNECT_IPS",
            "SCT",
            ],
        "eventHandler": {
            onSuccess (payload) {
                // hit merchant api for initiating verfication
            console.log(payload);

                $.ajax({
                         url:"/campground/<%=foundcamp._id %>/payment",
                        type:"POST",

                        data:{
                            token:payload.token,
                            amount:payload.amount,
                        },

                    });
            },
            onError (error) {
                console.log(error);
            },
            onClose () {
                console.log('widget is closing');
            }
        }
    };

    var checkout = new KhaltiCheckout(config);
    var btn = document.getElementById("payment-button");
    btn.onclick = function () {
        // minimum transaction amount must be 10, i.e 1000 in paisa.
        checkout.show({amount: 2000});
    }
</script>
</body>
</html>

